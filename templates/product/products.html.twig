{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{%block containe %}
<div class="row">
    <div
     class="col-md-3">
        <h3>Filtrer</h3>
        {{ form_start(form) }}
        {{ form_widget(form) }}         
        {{ form_end(form) }}
    </div>
    <div class="col-md-9">
        <h1 class="text-center mb-5">Nos produits</h1>
        <div class="row">
            {% for product in products %}
            <div class="col-md-4">
                <div class="card m-3">
                    <img src="{{ asset('uploads/') ~ product.illustration }}" class="card-img-top" alt="..." />
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <p class="card-text">
                            {{ product.price|number_format(2, ',', '.') }}
                            â‚¬
                        </p>
                        <a href="{{ path('product', { id: product.id }) }}" class="btn btn-primary">Voir le produit</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}