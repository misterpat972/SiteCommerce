{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block containe %}
    <h1>Mon panier</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix</th>
                <th>Total</th>                
            </tr>
        </thead>
        <tbody>
            {# variable twig pour le total panier #}
            {% set total = null %}

            {% for product in cart %}
                <tr>
                    <td>
                        <img src="{{ asset('uploads/' ~ product.product.illustration )}}" alt="" width="90">
                        {{ product.product.name }}
                    </td>
                    <td>{{ product.quantity }}</td>
                    <td>{{ product.product.price | number_format(2, ",", ".") }} €</td>
                    <td>{{ (product.product.price * product.quantity) | number_format(2, ",", ".") }} €</td>

                </tr>
                {% set total = total + (product.product.price * product.quantity) %}
            {% endfor %}
        </tbody>
    </table>
    <div class="text-right">
        <p>Nombre de produits : {{ cart|length}} </p>
        <p>Totale du panier: {{ total }} €</p>
    </div>
    <div class="d-flex justify-content-end">        
        <a href="{{ path('products') }}" class="btn btn-primary mx-3 ">Continuer mes achats</a>
        <a href="" class="btn btn-success  ">Passer ma commande</a>
    </div>
{% endblock %}
